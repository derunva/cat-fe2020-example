extends ../layouts/simple.layout.pug
include ../components/mixins.pug
block variables
  -
    var pageTitle = "homepage"
    var categories = [
      {
        name: "Телефони",
        image: "img/phones.jpg"
      },
      {
        name: "Телевізори",
        image: "img/tv.jpeg"
      },
      {
        name: "Фотоапарати",
        image: "img/cannon.png"
      },
      {
        name: "Планшети",
        image: "img/tablets.jpg"
      }
    ]
block content
  .wrapper
    .row
      each category in categories
        .column.column-phablet-1-2.column-tablet-1-3.column-desktop-1-4
          +category-link(category)
